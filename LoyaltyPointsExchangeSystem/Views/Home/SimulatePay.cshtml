@model PayViewModel

@{
    ViewBag.Title = "Simulate pay";
}



<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-5">
        <h1>Simulate pay to calculate points</h1>
        <form method="post" asp-action="Simulatepay" asp-controller="home">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary" style="margin-top: 5px">Pay</button>
        </form>
    </div>
</div>
