@model TransferPointsViewModel

@{
    ViewBag.Title = "Tranfer Points";
}



<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-5">
        <h1> Tranfer Points to another user</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pointsToTransfer"></label>
                <input asp-for="pointsToTransfer" class="form-control" />
                <span asp-validation-for="pointsToTransfer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user" class="control-label"></label>
                <select asp-for="user" class="form-control" asp-items="ViewBag.Users">
                    <option value=""></option>
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Tranfer Points</button>
        </form>
    </div>
</div>